<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kết quả cuộc họp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/Lavender"/>
        <!-- Thông tin cuộc họp -->
        <TextView
            android:id="@+id/tvMeetingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên cuộc họp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvMeetingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Tóm tắt nội dung cuộc họp -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nội dung chính"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvMeetingSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nội dung chi tiết"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Kết luận cuộc họp -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết luận"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Danh sách kết luận -->
        <LinearLayout
            android:id="@+id/llConclusions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <!-- Nút lưu -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"/>

    </LinearLayout>
</ScrollView>
